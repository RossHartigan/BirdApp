<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sighting">

    <TextView
        android:id="@+id/tv_Sighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="Sightings"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_BirdName"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="#30000000"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Bird Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Description" />

    <EditText
        android:id="@+id/ed_lat"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="#30000000"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Latitude"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Description2" />

    <EditText
        android:id="@+id/ed_long"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="#30000000"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Longitude"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_lat" />

    <TextView
        android:id="@+id/tv_Description"
        android:layout_width="218dp"
        android:layout_height="65dp"
        android:layout_marginTop="25dp"
        android:text="Enter the name of the bird you saw at your location :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Sighting" />

    <TextView
        android:id="@+id/tv_Description2"
        android:layout_width="222dp"
        android:layout_height="85dp"
        android:layout_marginTop="25dp"
        android:text="If you would like to add custom co-ordinates enter them down below. Leave Blank to use your current location:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Sighting" />

    <Button
        android:id="@+id/btn_Sighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Add Signting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_BirdName" />

</androidx.constraintlayout.widget.ConstraintLayout>